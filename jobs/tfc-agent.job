job "tfc-agent" {
  datacenters = ["lab"]
  type        = "service"
  priority    = 10

  constraint {
    attribute = "${meta.network_node}"
    value     = "true"
  }

  update {
    max_parallel  = 0
    auto_revert   = true
  }

  group "tfc-agent" {
    count = 1

    restart {
      interval  = "12h"
      attempts  = 720
      delay     = "60s"
      mode      = "delay"
    }

    task "tfc-agent" {
      driver = "containerd-driver"

      config {
        image         = "docker.io/hashicorp/tfc-agent:${RELEASE}"
        host_network  = true
      }
      
      env {
        TFC_AGENT_TOKEN = "${TFC_AGENT_TOKEN}"
        TFC_AGENT_NAME  = "${TFC_AGENT_NAME}"
      }

      template {
        data          = <<EOH
IMAGE_DIGEST={{ keyOrDefault "tfc-agent/config/image_digest" "1" }}
RELEASE={{ keyOrDefault "tfc-agent/config/release" "latest" }}
EOH
        destination   = "env_info"
        env           = true
      }

      resources {
        cpu    = 100
        memory = 128
      }
      kill_timeout  = "30s"
    }
  }
}
